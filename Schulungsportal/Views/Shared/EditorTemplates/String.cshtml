@model System.String
<div class="form-group">
    <label for="@Html.IdForModel()" class="control-label col-md-2" >@Html.DisplayNameForModel()</label>
    <div class="col-md-10">
        <input type="text" name="@Html.NameForModel()" id="@Html.IdForModel()" value="@Html.ValueForModel()" class="form-control" />
        <div class="text-danger">@Html.ValidationMessageFor(m => m)</div>
    </div>
</div>
