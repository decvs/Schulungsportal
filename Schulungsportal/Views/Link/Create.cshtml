@model Schulungsportal.Models.Post

@{
    ViewBag.Title = "Create";
}

@section ModuleMenu
{
    @Html.Partial("LinksMenu", 0)
}


@using (Html.BeginForm("Create", "Link", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @if (ViewData.ModelState.IsValid == false)
        {
            <div class="panel panel-danger">
                <div class="panel-heading">Eingabefehler</div>
                <div class="panel-body text-danger">
                    @Html.ValidationSummary(false)
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.EditorFor(model => model.Uri)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <button type="submit" class="btn btn-warning">Speichern <span class="glyphicon glyphicon-save-file"></span></button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
