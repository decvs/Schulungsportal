@model Schulungsportal.ViewModel.ParticipantViewModel

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Index</h2>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
    <a href="@Url.Action("Create", "Participants")" class="btn btn-warning">
        Neu<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>

</p>
<table class="table table-bordered table-condensed table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Vorname</th>
        <th>Nachname</th>
        <th>Email</th>
        <th>Webseite</th>
        <th>Firma</th>
        <th>Operation</th>
    </tr>

@foreach (var item in Model.Participants) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Firstname
        </td>
        <td>
            @item.Lastname
        </td>
        <td>
            <a href="mailto:@item.Email">
                <span class="glyphicon glyphicon-envelope"></span>
            </a></td>
        <td>
            <a href="http://@item.Website">
                <span class="glyphicon glyphicon-piggy-bank"></span>
            </a>
        </td>
        <td>
            @item.Company
        </td>
         <td>  
             <a href="@Url.Action("Edit", "Participants", new  { id=item.Id })" class="btn btn-warning">
                 <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
             </a>
             <a href="@Url.Action("Details", "Participants", new  { id=item.Id })" class="btn btn-warning">
                 <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
             </a>
             <a href="@Url.Action("Delete", "Participants", new { id = item.Id })" class="btn btn-warning">
                 <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
             </a>
        </td>
    </tr>
}

</table>
