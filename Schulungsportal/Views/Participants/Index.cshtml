@model Schulungsportal.ViewModel.ParticipantViewModel

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Index</h2>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-condensed table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Vorname</th>
        <th>Nachname</th>
        <th>Email</th>
        <th>Webseite</th>
        <th>Firma</th>
        <th>Operation</th>
    </tr>

@foreach (var item in Model.Participants) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Firstname
        </td>
        <td>
            @item.Lastname
        </td>
        <td>
            <a href="mailto:@item.Email">@item.Email</a></td>
        <td>
            <a href="http://@item.Website">@item.Website</a>
        </td>
        <td>
            @item.Company
        </td>
         <td>  
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
